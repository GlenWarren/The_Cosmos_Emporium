<%= render 'shared/blank_navbar' %>
<div class="devise-back" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.2)), url(<%= image_path 'retro_img_3.jpg' %>)">
<div class="devise-form">

<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions pb-3">
    <%= f.button :submit, "Log in", class: "button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

</div>
