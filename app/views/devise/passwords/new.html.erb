<%= render 'shared/blank_navbar' %>
<div class="devise-back" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.2)), url(<%= image_path 'retro_img_3.jpg' %>)">
<div class="devise-form">
<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions pb-3">
    <%= f.button :submit, "Send me reset password instructions", class: "button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
