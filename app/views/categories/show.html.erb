<%= render 'shared/navbar' %>
<div class="show-page">
  <div class="filters">
    <h6>Available Filters:</h6>
    <% @sub_categories.each do |subcat| %>
      <%= subcat.name %>
      <br>
    <% end %>
  </div>
  <div class="results">
    <h6>X number of items found:</h6>
    <% @products.each do |prod| %>
    <div class="card">
      <%= link_to product_path(prod) do %>
        <%= image_tag(prod.image) %>
      <% end %>
      <%= link_to prod.name, product_path(prod) %>
    </div>
    <% end %>
  </div>
</div>
