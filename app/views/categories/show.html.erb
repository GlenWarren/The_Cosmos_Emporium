<%= render 'shared/navbar' %>
<div class="show-page">
  <div class="filters border-right">
    <h5>Apply filter:</h5>
    <% @sub_categories.each do |subcat| %>
      - <%= link_to subcat.name, category_path(@category, :filter => subcat.name) %>
      (<%= subcat.products.count %>)
      <br>
    <% end %>
  </div>
  <div class="results">
    <h5><% if @active_subcat.present? %>
        <%= @products.count %> results for <%= @active_subcat.name %>:
      <% else %>
        <%= @products.count %> results:
      <% end %>
      </h5>
    <% @products.each do |prod| %>
    <div class="mycard">
      <div class="card-image">
        <%= link_to category_product_path(@category, prod) do %>
          <%= image_tag(prod.image) %>
        <% end %>
      </div>
      <div class="card-details">
        <h3><%= link_to prod.name, category_product_path(@category, prod) %></h3>
        <p class="trim"><%= prod.description %></p>
        <div class="card-stats">
          <h6>Available: <%= prod.availability %></h6>
          <h5>Â£<%= prod.price %></h5>
        </div>
      </div>
    </div>
    <br>
    <% end %>
  </div>
</div>
