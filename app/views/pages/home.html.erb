<%= render 'shared/navbar' %>
<div class="mybanner" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.2)), url(<%= image_path 'retro_img_4.jpg' %>)">
  <div class="text">
    <h2>Attention deities, pirates, villains, emperors...</h2>
    <h5>Are you looking to expand your space-empire?</h5>
    <h5>Browse and purchase prime interstellar real estate here, at the click of a button</h5>
  </div>
<div class="featured">
  <div class="featureds">
    <h5 class="p-2">Featured Products:</h5>
    <div class="cards">
      <% Product.where(homepage: true).sample(6).each do |prod| %>
      <div class="homepage-card">
        <%= link_to category_product_path(prod.category, prod) do %>
          <%= image_tag(prod.image) %>
        <% end %>
        <h6 class="pt-2"><%= link_to prod.name, category_product_path(prod.category, prod) %></h6>
      </div>
      <% end %>
    </div>
  </div>
  <div class="featureds">
    <h5 class="p-2">Popular Categories:</h5>
    <div class="pl-3">
      <% SubCategory.where(homepage: true).sample(4).each do |subcat| %>
      <%#= link_to subcat.name, category_path(subcat.category) %>
        <div class="popular">
          <%# unless subcat.products.count == 0 %>
            <%= link_to category_path(subcat.category, :filter => subcat.name) do %>
              <% prod = subcat.category.products.sample %>
              <%= image_tag(prod.image) %>
            <% end %>
            <div class="popular-text">
              <h5><%= link_to "#{subcat.name} (#{subcat.category.name})", category_path(subcat.category, :filter => subcat.name) %></h5>
              <h6>Listings: <%= subcat.products.count %></h6>
            </div>
          <%# end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
<div class="footer">

</div>
